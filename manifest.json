{
    "manifest_version": 3,
    "name": "HighlightNow",
    "version": "1.0.0",
    "description": "Highlight text while reading. Copy what matters. No clutter.",
    "permissions": [],
    "host_permissions": ["<all_urls>"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_title": "HighlightNow"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "css": ["assets/content.css"],
        "run_at": "document_idle"
      }
    ]
  }
  